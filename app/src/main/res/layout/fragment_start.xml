<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".fragment.StartFragment">

    <LinearLayout
        android:id="@+id/linear_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/illustration_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/board1"
            android:layout_gravity="center"
            android:layout_marginTop="49dp" />

        <TextView
            android:id="@+id/start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="57dp"
            android:text="love calculator"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/start_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:paddingHorizontal="44dp"
            android:text="Find out the compatibility \n of your names."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="55dp"
        android:text="Get started"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#62000000"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/bg_start"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>